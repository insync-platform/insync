---
import Layout from "../../layouts/Layout.astro";
import Cta from "../../components/sections/Cta.astro";
import { ArrowDown } from "@lucide/astro";
import Button from "../../components/ui/Button.astro";
import { Image } from "astro:assets";
import InsyncLaptopMockup from "../../assets/insync-laptop-mockup.webp";
import InsyncAiTools from "../../assets/insync-ai/tools.webp";
import InsyncAiInput from "../../assets/insync-ai/input.webp";
import InsyncAiOutput from "../../assets/insync-ai/output.webp";
import { Zap, Languages, ShieldCheck, Brain } from "@lucide/astro";

const features = [
  {
    title: "Slimme Backoffice Chat",
    description:
      "Vraag, wijzig of voeg gegevens toe in jouw backoffice — Insync AI begrijpt natuurlijke taal en voert acties direct voor je uit.",
    icon: Brain,
  },
  {
    title: "Supersnelle workflow",
    description:
      "Geen eindeloos klikken meer. Met één chatregel voer je in seconden uit wat anders minuten kost.",
    icon: Zap,
  },
  {
    title: "Volledig veilig & gekoppeld",
    description:
      "Insync AI werkt bovenop je bestaande backoffice (zoals Anva of Novulo) via een beveiligde MCP-server. Jouw data blijft waar hij hoort: In jouw backoffice",
    icon: ShieldCheck,
  },
  {
    title: "Meertalige ondersteuning",
    description:
      "Communiceer met Insync AI in jouw voorkeurstaal. Het systeem begrijpt en reageert in meerdere talen voor optimaal gebruiksgemak.",
    icon: Languages,
  },
];
---

<Layout
  title="Insync AI"
  description="Ontdek Insync AI: jouw slimme assistent voor directe backoffice-acties via chat of spraak. Bespaar tijd en verbeter je advies met AI-gestuurde efficiëntie."
>
  <section id="hero" class="pt-16 sm:pt-24 2xl:pt-32 pb-16 sm:pb-28 overflow-x-clip">
    <div class="container">
      <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-24">
        <div>
          <div class="space-y-4">
            <h1
              class="display text-center lg:text-left bg-clip-text text-transparent bg-gradient-to-t from-[#16136C] to-foreground mb-4 starting:opacity-0 starting:translate-y-2 transition-all duration-500 delay-150"
            >
              Werk slimmer. Adviseer beter.
            </h1>
            <p
              class="text-center lg:text-left sm:text-lg mb-10 starting:opacity-0 starting:translate-y-2 transition-all duration-500 delay-300"
            >
              Een slimme AI-assistent die rechtstreeks communiceert met jouw backoffice. Voer acties
              uit, vind klantgegevens en beheer je administratie… gewoon via chat of spraak.
            </p>
          </div>

          <div
            class="flex flex-col justify-center lg:justify-start sm:flex-row gap-4 starting:opacity-0 starting:translate-y-2 transition-all duration-500 delay-450"
          >
            <Button href="/demo" size="lg" class="w-full lg:w-auto"> Demo inplannen </Button>
            <Button href="#features" variant="outline" size="lg" class="w-full lg:w-auto">
              <ArrowDown class="text-primary size-6" />
              Ontdek hoe het werkt
            </Button>
          </div>
        </div>
        <div class="aspect-video lg:aspect-square max-w-full lg:max-w-[600px] w-full">
          <Image
            src={InsyncLaptopMockup}
            alt="Medewerkerportaal"
            class="h-full w-full rounded-3xl object-cover"
            data-aos="custom-zoom-in"
            data-aos-duration="1000"
            data-aos-delay="600"
            data-aos-once="true"
          />
        </div>
      </div>
    </div>
  </section>

  <section id="features" class="py-20 sm:py-28">
    <div class="container">
      <div
        class="flex flex-col lg:flex-row justify-between items-end gap-4 lg:gap-10 mb-16"
        data-aos="custom-fade-up"
        data-aos-duration="400"
        data-aos-once="true"
      >
        <div class="lg:max-w-[600px]">
          <div class="text-primary font-medium mb-2">Voordelen voor kantoren</div>
          <h1>Wat Insync AI voor jou betekent</h1>
        </div>
        <p class="lg:max-w-[640px]">
          Van tijdrovende administratie naar directe actie. Dit zijn de voordelen die je elke dag
          voelt.
        </p>
      </div>

      <ul
        class="grid md:grid-cols-2 xl:grid-cols-4 border rounded-2xl"
        data-aos="custom-fade-up"
        data-aos-duration="400"
        data-aos-delay="200"
        data-aos-once="true"
      >
        {
          features.map((feature) => (
            <li class="flex p-6 border-b md:border-r md:nth-[2]:border-r-0 xl:nth-[2]:border-r md:nth-[3]:border-b-0 xl:nth-[4]:border-b-0 last:border-0">
              <feature.icon class="size-6 text-primary shrink-0 mt-0.5 mr-3" />
              <div>
                <div class="text-lg font-medium mb-1">{feature.title}</div>
                <p class="text-muted-foreground">{feature.description}</p>
              </div>
            </li>
          ))
        }
      </ul>
    </div>
  </section>

  <section id="steps" class="bg-gradient-to-t from-muted to-muted/50 py-20 sm:py-28">
    <div class="container">
      <div class="flex flex-col items-center">
        <h1
          class="text-center max-w-[600px] mb-16"
          data-aos="custom-fade-up"
          data-aos-duration="400"
          data-aos-once="true"
        >
          Van chat naar actie in seconden
        </h1>
        <ul class="grid lg:grid-cols-3 gap-8 max-w-[1200px] w-full">
          <li
            data-aos="custom-fade-up"
            data-aos-duration="400"
            data-aos-delay="200"
            data-aos-once="true"
          >
            <div
              class="relative bg-background border rounded-2xl shadow-md overflow-hidden aspect-video mb-6 pt-4"
            >
              <div
                class="absolute h-1/2 inset-x-0 bottom-0 bg-gradient-to-t from-background to-transparent"
              >
              </div>
              <Image
                src={InsyncAiInput}
                alt="Insync AI invoer"
                class="h-full aspect-video mx-auto"
              />
            </div>
            <h2 class="h4 mb-2">1. Jij stelt een vraag aan Insync AI</h2>
            <p class="text-sm text-muted-foreground">
              Typ of spreek wat je wilt doen. Insync AI begrijpt natuurlijke taal en herkent je
              intentie.
            </p>
          </li>
          <li
            data-aos="custom-fade-up"
            data-aos-duration="400"
            data-aos-delay="300"
            data-aos-once="true"
          >
            <div
              class="relative bg-background border rounded-2xl shadow-md overflow-hidden aspect-video mb-6 pt-4"
            >
              <div
                class="absolute h-1/2 inset-x-0 bottom-0 bg-gradient-to-t from-background to-transparent"
              >
              </div>
              <Image
                src={InsyncAiTools}
                alt="Insync AI tools"
                class="h-full aspect-video mx-auto"
              />
            </div>
            <h2 class="h4 mb-2">2. Insync AI begrijpt en vertaalt</h2>
            <p class="text-sm text-muted-foreground">
              De AI zet je vraag om naar de juiste backoffice-actie en vult automatisch de benodigde
              gegevens in.
            </p>
          </li>
          <li
            data-aos="custom-fade-up"
            data-aos-duration="400"
            data-aos-delay="400"
            data-aos-once="true"
          >
            <div
              class="relative bg-background border rounded-2xl shadow-md overflow-hidden aspect-video mb-6 pt-4"
            >
              <div
                class="absolute h-1/2 inset-x-0 bottom-0 bg-gradient-to-t from-background to-transparent"
              >
              </div>
              <Image
                src={InsyncAiOutput}
                alt="Insync AI resultaat"
                class="h-full aspect-video mx-auto"
              />
            </div>
            <h2 class="h4 mb-2">3. Direct uitgevoerd in jouw backoffice</h2>
            <p class="text-sm text-muted-foreground">
              De opdracht wordt direct via de Insync MCP-server uitgevoerd.
            </p>
          </li>
        </ul>
      </div>
    </div>
  </section>

  <Cta
    heading="Ontdek hoe eenvoudig jouw werkdag kan worden"
    text="Plan een demo in en ervaar zelf hoe Insync AI jouw administratie vereenvoudigt."
  />
</Layout>
