---
import Layout from "../../layouts/Layout.astro";
import { Image } from 'astro:assets';
import IntermediairPortaal from "../../assets/intermediairportaal-mockup-laptop.webp";
import Cta from "../../components/sections/Cta.astro";

const posts = [
  {
    title: 'Novulo koppeling',
    description: 'Koppel Insync aan Novulo voor een naadloze integratie van klantdata en verzekeringsbeheer.',
    date: '2025-06-09',
    link: '/blog/novulo-koppeling',
    thumbnail: IntermediairPortaal
  }
]
---

<Layout title="Blog" description="Lees hoe intermediairs klantcontact versterken met digitale tools, AI en slimme processen. Tips, inzichten en innovaties van het Insync-team.">
  <section id="hero" class="pt-16 pb-12 sm:pb-16 overflow-x-clip">
    <div class="container">
      <div>
        <div class="space-y-4">
          <h1 class="display text-center lg:text-left bg-clip-text text-transparent bg-gradient-to-t from-[#16136C] to-foreground mb-4 starting:opacity-0 starting:translate-y-2 transition-all duration-500 delay-150">
            Blog
          </h1>
          <p class="text-center lg:text-left max-w-[800px] mb-10 starting:opacity-0 starting:translate-y-2 transition-all duration-500 delay-300">
            Welkom op onze blog! Hier delen we inzichten, tips en nieuws over Insync en de verzekeringsbranche. Blijf
            op de hoogte van de laatste ontwikkelingen en leer hoe je het meeste uit ons platform haalt.
          </p>
        </div>
      </div>
      </div>
  </section>
  <section id="overview" class="overflow-x-hidden">
    <div class="container">
      <div class="bg-muted p-6 sm:rounded-3xl -mx-4 sm:-mx-6">
        <div class="grid md:grid-cols-2 2xl:grid-cols-3 gap-6">
          {posts.map((post) => (
            <a href={post.link} class="bg-background border rounded-2xl shadow-lg p-2 pb-4">
              <div>
                <Image src={post.thumbnail} alt={post.title} class="w-full h-64 object-cover rounded-2xl mb-4" />
              </div>
              <div class="px-4">
                <div class="h4 mb-1">{post.title}</div>
                <p class="text-sm text-muted-foreground mb-4">{post.description}</p>
                <p class="text-sm text-primary font-mono">{new Date(post.date).toLocaleDateString()}</p>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <Cta/>
</Layout>